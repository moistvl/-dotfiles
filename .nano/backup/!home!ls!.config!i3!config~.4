# kill focused window
bindsym $mod+Escape kill

#change brightness
bindsym XF86MonBrightnessUp exec sudo light -A 5
bindsym XF86MonBrightnessDown exec sudo light -U 5
#kbd
bindsym XF86KbdBrightnessUp exec kblight.py --up
bindsym XF86KbdBrightnessDown exec kblight.py --down
#change volume
bindsym XF86AudioRaiseVolume exec amixer -D pulse sset Master '5%+'
bindsym XF86AudioLowerVolume exec amixer -D pulse sset Master '5%-'
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle
bindsym XF86LaunchA floating toggle
bindsym XF86LaunchB exec --no-startup-id rofi -show run -font "lemonttf 8" -m -1
